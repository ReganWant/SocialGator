<% if @scheduled_image_posts.any? %>
    <div class="content_list clearfix">
       <% @scheduled_image_posts.each do |image| %>
          <div class="textual">
            <div class="box">
              <%= link_to 'x', [@user, @business, image], confirm: "Are you sure", method: :delete, class: "delete_button",:title => "Delete this Post" %>
              <span class="label white time"><%= image.publish_date.strftime("%d-%m-%y %H:%M") if !image.publish_date.nil? %></span>
              <div class="img_wrap">
                <%= image_tag image.embed_url, class: "thumbnail" %>
                 <span class="large_image_url" style="display: none"><%= image.embed_url %></span>
               </div><!--img_wrap-->
               <a href="<%= image.link %>", class="post_link", target="_blank"><h6><%= image.title %></h6></a>
               
              <%= link_to "Edit", edit_user_business_scheduled_post_path(@user, @business, image, post_type: "image"), class: "small button white nice centered schedule_post edit_scheduled_post radius" %>            
          </div><!--box-->
          </div><!--images-->
      <% end %>
    </div><!--content_list-->
    <%= will_paginate @scheduled_image_posts %>
 <% else %>
      <div class="no_posts clearfix">
        <h2>No scheduled posts.</h2>
      </div>
<% end %>

 <div id="img_reveal" class="reveal-modal">
      <img src="" id="large_image_placeholder" />
      <a class="close-reveal-modal">&#215;</a>
 </div>